<h1>Reviews#new</h1>
<div class="container my-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <h1>New Restaurant</h1>
      <%= simple_form_for([@restaurant, @review]) do |f| %>
        <%= f.input :content %>
        <%= f.input :rating %>
        <%= f.submit "Submit review", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
